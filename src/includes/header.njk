<header class="navbar-1 w-full py-2">
  <div class="container mx-auto flex justify-between items-center">
    <!-- Logo -->
    <div class="logo">
      <a href="/" class="text-primary-50 hover:text-primary-300 transition duration-300">{{ site.name }}</a>
    </div>

    <div>
      {{ collections.all | eleventyNavigation | eleventyNavigationToHtml({

        listElement: "ul",
        listItemElement: "li",

        listClass: "flex gap-4",
        listItemClass: "text-primary-50 hover:text-primary-400 transition duration-300",

        listItemHasChildrenClass: "has-submenu",
        anchorClass: "block px-4 py-2",

        activeListItemClass: "active",
        activeAnchorClass: "active",

        activeKey: eleventyNavigation.key,
        showExcerpt: false

      }) | safe }}
    </div>
  </div>
</header>
