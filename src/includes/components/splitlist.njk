<div class="mx-auto w-2/3 text-center py-5">
  <h2 class="text-4xl font-normal uppercase">{{ section.data.title | replaceBusinessName(site.name) }}</h2>
  <p>{{ section.data.subheadline | replaceBusinessName(site.name) }}</p>
  <p>{{ section.data.description | replaceBusinessName(site.name) }}</p>
</div>
<div class="md:w-2/3 mx-auto p-4 pb-5">
<div class=
"page-block split-list {{ section.url | slugify }} {% for cssClass in section.data.cssclasses %}{{ cssClass }} {% endfor %}{% if section.data.version %} v{{ section.data.version | slugify }}{% endif %}">
  <div class="w-full border-group">
  {{ section.content | replaceBusinessName(site.name) | safe }}
  </div>
</div>
</div>
