<!DOCTYPE html>
<html class="leading-tight text-gray-900 antialiased" lang="{{ meta.lang or site.lang }}">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{ site.title }} - {{ title or meta.title }}</title>
    {% include "meta.njk" %}
  </head>

  <body class="min-h-screen bg-white" data-env="{{ node.env }}">

    {% include "header.njk" %}
    <div class="py-10" @html="content">
      <main id="main" tabindex="-1">

          {{ content | safe }}

      </main>
    </div>
    {% include "site-banner.njk" %}
    {% include "footer.njk" %}
    <script type="module" src="{{ '/assets/js/index.js' | url }}"></script>
  </body>
</html>
